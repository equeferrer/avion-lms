<h1>Edit Lesson</h1>

<%= form_for @lesson, url:lesson_update_path(@lesson) do |f| %>

	<p>
	   <%= f.label :title %> <br/>
	   <%= f.text_field :title %>
	</p> 

	<p>
	   <%= f.label :content %> <br/>
	   <%= f.text_field :content %>
	</p> 

	<p>
		<%= f.label :video_url %> <br/>
		<%= f.text_field :video_url %>
	</p>
	
	<p>
		<%= f.label :document_url %> <br/>
		<%= f.text_field :document_url %>
	</p>

	<p>
	   <%= f.submit "Update Lesson", class: 'btn' %> <br/>
	</p> 
<% end %>

<p>
	<% if @lesson.errors.any?%>
		<ul>
			<% @lesson.errors.full_messages.each do |message| %>
				<li> <%= message %> </li>
			<% end %>
		</ul>

	<% end%>
</p>
