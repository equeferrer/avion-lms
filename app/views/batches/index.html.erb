<div class="container-sm">
  <h1>Batches</h1>
  <table class="table table-light table-striped table-bordered table-hover" style="width: 50%">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @batches.each do |batch| %>
      <tr>
        <td> <%= batch.name %></td>
        <td> <%= batch.start_date %></td>
        <td> <%= batch.end_date %></td>
        <td> <%= link_to "View", batch_show_path(batch)%> </td>
        <td> <%= link_to "Edit", batch_edit_path(batch)%> </td> 
        <td> <%= link_to "Delete", batch_delete_path(batch), :method => :Delete, data: {confirm: "Are you sure you want to delete this?"} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
  <%= link_to "Create New Batch", batches_new_path, class: "btn" %>
  <%= link_to "Back", :back, class:"btn btn-secondary"%>
</div>