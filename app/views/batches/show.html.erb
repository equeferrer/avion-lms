<div class="flex d-flex">
  <div class="col-4 gray-header">
    <h2> Batch: <%= @batch.name %> </h2>
    <h2> Start Date:  <%= @batch.start_date.strftime('%b. %e, %Y') %> </h2>
    <h2> End Date:  <%= @batch.end_date.strftime('%b. %e, %Y') %> </h2>
    <details>
      <summary> Lesson List: <%= @batch.lessons.count %> </summary>
      <% @batch.lessons.each do |lesson| %>
        <p> <%= lesson.title %> </p>
      <% end %>
    </details>
  </div>

  <div class="col-7">
    <h2> Student List </h2>
    <table class="table table-light table-striped table-bordered table-hover" style="width: 80%">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Progress</th>
        <th>Last update</th>
      </tr>
    </thead>
    <tbody>
    <% @batch.students.each do |student| %>
      <tr style="height: 50px">
        <td> <%= student.first_name %></td>
        <td> <%= student.last_name %></td>
        <% if !student.progress.blank? %>
        <td style="text-align:center"> <%= student.progress.passed %>/<%=student.progress.total%> </td>
        <td style="text-align:center"> <%= time_ago_in_words(student.progress.updated_at) %> ago </td>
        <% end %>
      </tr> 
      <% end %>
    </tbody>
  </table>
  </div>
</div>