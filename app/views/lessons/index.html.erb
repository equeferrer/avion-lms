<h1>Lessons</h1>
<% if admin_signed_in? %>
<div class="container mt-1 p-5">
  <table class="table table-light table-striped table-bordered table-hover" style="overflow-x:auto;">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Video URL</th>
        <th>Document URL</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @lessons.each do |lesson| %>
      <tr>
        <td> <%= lesson.title %></td>
        <td> <%= lesson.content %></td>
        <td> <%= link_to "video", lesson.video_url %> </td>
        <td> <%= link_to "lesson", lesson.document_url %> </td>
        <td> <%= link_to "View", lesson_show_path(lesson)%> </td>
        <td> <%= link_to "Edit", lesson_edit_path(lesson)%> </td> 
        <td> <%= link_to "Delete", lesson_delete_path(lesson), :method => :Delete, data: {confirm: "Are you sure you want to delete this?"} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
  <%= link_to "Create New Lesson", lessons_new_path, class: "btn btn-secondary" %>
  <%= link_to "Back", :back, class:"btn btn-secondary"%>
</div>
<% elsif student_signed_in? %>
  <% @lessons.each do |lesson| %>
    <div><%= lesson.title %> <%= link_to "View", lesson_show_path(lesson) %> </div>
  <% end %>
<% end %>